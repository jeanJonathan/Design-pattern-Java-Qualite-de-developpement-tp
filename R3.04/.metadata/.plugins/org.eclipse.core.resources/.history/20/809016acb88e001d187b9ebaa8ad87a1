
public abstract class DecorateurDePizza implements Pizza {

	private Pizza pizzaDecorer;
	
	public DecorateurDePizza(Pizza unComposant) {
		this.pizzaDecorer= unComposant;
	}
	public void setComposantDecorer(Pizza unComposant) {
		this.pizzaDecorer = unComposant;
	}
	public Pizza getComposantDecorer() {
		return pizzaDecorer;
	}

}
