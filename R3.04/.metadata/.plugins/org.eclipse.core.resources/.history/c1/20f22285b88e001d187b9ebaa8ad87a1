
public abstract class DecorateurDePizza implements Pizza {

	private IComposant composantDecorer;
	
	public DecorateurDePizza(IComposant unComposant) {
		this.composantDecorer = unComposant;
	}
	public void setComposantDecorer(IComposant unComposant) {
		this.composantDecorer = unComposant;
	}
	public IComposant getComposantDecorer() {
		return composantDecorer;
	}

}
